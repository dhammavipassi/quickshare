{
  "version": 2,
  "builds": [
    { "src": "api/pages/screenshot.js", "use": "@vercel/node" },
    { "src": "app.js", "use": "@vercel/node" }
  ],
  "functions": {
    "api/pages/screenshot.js": {
      "memory": 1536,
      "maxDuration": 20,
      "runtime": "nodejs20.x",
      "includeFiles": "node_modules/{chrome-aws-lambda,@sparticuz/chromium,puppeteer-core}/**"
    }
  },
  "routes": [
    { "src": "^/api/pages/screenshot$", "dest": "api/pages/screenshot.js" },
    { "src": "/(.*)", "dest": "app.js" }
  ]
}

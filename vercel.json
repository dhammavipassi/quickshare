{
  "version": 2,
  "builds": [
    { "src": "api/pages/screenshot.js", "use": "@vercel/node" },
    { "src": "app.js", "use": "@vercel/node" }
  ],
  "functions": {
    "api/pages/screenshot.js": {
      "memory": 1024,
      "maxDuration": 20,
      "includeFiles": [
        "node_modules/@sparticuz/chromium/**",
        "node_modules/puppeteer-core/**"
      ]
    }
  },
  "routes": [
    { "src": "^/api/pages/screenshot$", "dest": "api/pages/screenshot.js" },
    { "src": "/(.*)", "dest": "app.js" }
  ]
}

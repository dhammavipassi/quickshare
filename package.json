{
  "name": "html-go-express",
  "version": "1.0.0",
  "description": "HTML代码分享工具 - Express版本",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=production node --max-old-space-size=1024 app.js",
    "dev": "NODE_ENV=development nodemon app.js",
    "test": "NODE_ENV=test node app.js",
    "prod": "NODE_ENV=production node --max-old-space-size=1024 app.js",
    "db:migrate:volume": "docker compose exec html-go-express node scripts/migrate-db-to-volume.js",
    "db:migrate:volume:hot": "docker cp scripts/migrate-db-to-volume.js html-go-express:/usr/src/app/scripts/migrate-db-to-volume.js && docker compose exec html-go-express node scripts/migrate-db-to-volume.js",
    "ngrok:url": "node scripts/ngrok-url.js",
    "cf:url": "node scripts/cf-url.js",
    "share:cf:up": "docker compose --profile cf up -d --build",
    "share:cf:stop": "docker compose stop cloudflared",
    "share:ngrok:up": "docker compose --profile ngrok up -d --build",
    "share:ngrok:stop": "docker compose stop ngrok-agent",
    "share:down": "docker compose stop cloudflared ngrok-agent || true"
  },
  "keywords": [
    "html",
    "share",
    "express",
    "ejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sparticuz/chromium": "^119.0.2",
    "cookie-session": "^2.0.0",
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "jsdom": "^26.0.0",
    "marked": "^15.0.7",
    "mermaid": "^11.6.0",
    "mermaid-render": "^1.0.9",
    "pg": "^8.11.5",
    "puppeteer-core": "^22.15.0",
    "morgan": "^1.10.0",
    "session-file-store": "^1.5.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  }
}
